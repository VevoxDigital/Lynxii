{
  "compilerOptions": {
    "outDir": "target/compiled",
    "declaration": true,
    "declarationDir": "target/compiled",

    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],

    "allowJs": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "strict": true,

    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
