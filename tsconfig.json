{
  "compilerOptions": {
    "rootDirs": [ "src", "test" ],
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",

    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],

    "allowJs": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "strict": true,

    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "target"
  ]
}
