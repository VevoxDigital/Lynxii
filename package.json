{
  "name": "lynxii",
  "version": "0.0.1-dev",
  "productName": "Lynxii",
  "description": "Simple and powerful dynamic communications network for your home, business, lab, or factory.",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "add:client": "yarn workspace lynxii-client add",
    "add:root": "yarn add -W",
    "add:server": "yarn workspace lynxii-server add",
    "build": "yarn clean:build && yarn compile && yarn copy:package && yarn test",
    "clean": "rimraf ./.tmp",
    "clean:build": "yarn clean ./dist",
    "clean:coverage": "yarn clean ./coverage ./.nyc_output",
    "compile": "tsc && yarn license dist",
    "copy:package": "copyfiles -u 1 src/*/package.json ./dist",
    "enable:workspaces": "yarn config set workspaces-experimental true",
    "enable:debug:win": "set DEBUG=lynxii*",
    "enable:debug:nix": "export DEBUG=lynxii*",
    "license": "yarn __run license.ts",
    "postinstall": "yarn update:project",
    "start:server": "yarn __run server/index.ts",
    "test": "nyc mocha",
    "update": "yarn __run update.ts",
    "update:client": "yarn update client",
    "update:project": "yarn update:server && yarn update:client",
    "update:server": "yarn update server",
    "__run": "node -r ts-node/register"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "project": {
    "licenseExtensions": [
      ".js"
    ],
    "forwardedPackageKeys": [
      "name",
      "version",
      "productName",
      "description",
      "private",
      "main",
      "repository",
      "author",
      "contributors",
      "license",
      "bugs",
      "homepage"
    ],
    "overridePackageKeys": {
      "server": {
        "config": {
          "host": "::1",
          "port": 14300
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VevoxDigital/Lynxii.git"
  },
  "author": "Vevox Digital",
  "contributors": [
    {
      "id": "CynicalBusiness",
      "name": "Matthew Struble",
      "email": "matt@vevox.io"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/VevoxDigital/Lynxii/issues"
  },
  "homepage": "https://vevox.io/lynxii",
  "workspaces": [
    "src/server",
    "src/client"
  ],
  "dependencies": {
    "@types/debug": "^0.0.30",
    "@types/node": "^10.3.1",
    "debug": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "mocha": "^5.2.0",
    "remap-istanbul": "^0.11.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  }
}
